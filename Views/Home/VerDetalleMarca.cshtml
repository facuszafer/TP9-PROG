@foreach(ropa item in ViewBag.ListadoRopa)
{
    <div class="col-md-8 ">
        <div class="card" style="width: 18rem;">
          <img src="/img/@item.Foto" class="card-img-top" alt="...">  
          <div class="card-body">
            <h1 class="card-title"><u>@item.Nombre</u></h1>
            <h4> @item.descripcion</h4>
            <h3><b> $@item.precio</b></h3>
            
          </div>
        </div>
      </div>
}

 <form>
     <input type="hidden" name="IdRopa">|
     <h5>Agregue una foto de la indumentaria:</h5>
     <input type="file" name="Foto">
     <h5>Agregue un nombre de la indumentaria:</h5>
     <input type="text" name="Nombre">
     <h5>Agregue una descripcion de la indumentaria:</h5>
     <input type="text" name="descripcion">
     <h5>Agregue un precio de la indumentaria:</h5>
     <input type="text" name="precio">

 </form>

