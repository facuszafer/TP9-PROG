@foreach (ropa item in ViewBag.ListadoRopa)
{
  <div class="col-md-8 ">
    <div class="card" style="width: 18rem;">
      <img src="@item.Foto" class="card-img-top" alt="...">
      <div class="card-body">
        <h1 class="card-title"><u>@item.Nombre</u></h1>
        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#ModalRopa" onclick="VerInfoPrecio(@item.precio)">
          precio
        </button>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#ModalRopa" onclick="AgregarMeGusta(@item.IdRopa)">
          Me Gusta
        </button>
        <p id="CantidadLikes">0</p>
        <h3><b>@item.descripcion</b></h3>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#ModalRopa" onclick="EliminarJugador(@item.IdRopa)">
          Eliminar
        </button>
      </div>
    </div>
  </div>
}
  <div class="modal fade" id="ModalRopa" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body" id="precioMarca">
          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Eliminar la prenda</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

